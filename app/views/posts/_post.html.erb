<%#Este archivo sirve para mostrar los post%>
<div id="<%= dom_id post %>" class="post-container">
  <p>
    <%= post.title %>
  </p>

  <p>
    <%= post.description %>
  </p>

  <p>
    <%= post.keywords %>
  </p>
  
  <p>
    <%= link_to "", post, class: "post-link" %>
  </p>

  <% post.images.each do |image| %>
      <%= image_tag(image, style: "object-fit: contain; width: 600px; height 600px; margin: 20px;") %>
  <% end %>
</div>
