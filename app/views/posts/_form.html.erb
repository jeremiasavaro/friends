<div class="col-xl-4 col-md-6 col-sm-8 col-10" style="margin: auto; margin-top: 20px ;background-color: #f8f8f8; padding: 15px; border-radius: 6px">
  <%= form_with(model: post) do |form| %>
  <h1>New post</h1>
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title, style: "display: block; margin-bottom: 0px" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= form.label :description, style: "display: block; margin-bottom: 0px; margin-top: 5px" %>
      <%= form.text_field :description, class: "form-control" %>
    </div>

    <div>
      <%= form.label :keywords, style: "display: block; margin-bottom: 0px; margin-top: 5px" %>
      <%= form.text_field :keywords, class: "form-control" %>
    </div>

    <div>
      <%= form.submit class: "btn btn-dark col-12 mt-4" %>
    </div>
  <% end %>
</div>
